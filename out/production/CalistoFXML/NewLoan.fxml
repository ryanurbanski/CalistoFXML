<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="580.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NewLoanController">
   <children>
      <BorderPane prefHeight="580.0" prefWidth="320.0">
         <top>
            <Label alignment="CENTER" contentDisplay="TOP" prefHeight="50.0" prefWidth="320.0" text="Callisto mFinance" textAlignment="CENTER" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" prefHeight="56.0" prefWidth="321.0" text="Enter your information" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label text="Social Security Number:" />
                  <TextField />
                  <Label text="Amount Requested:" />
                  <TextField />
                  <Label text="Employment Status:" />
                  <RadioButton mnemonicParsing="false" text="Employed" />
                  <RadioButton mnemonicParsing="false" text="Unemployed" />
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox alignment="BOTTOM_CENTER" prefHeight="56.0" prefWidth="320.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleSubmitButtonAction" text="Submit Loan Application" />
                  <Button contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#handleBackButtonAction" text="Back to Dashboard" />
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
